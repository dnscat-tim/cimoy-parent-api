{
  "appId": "id.cimoy.parent",
  "appName": "CIMOY Parent",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#FF6600",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP"
    },
    "LocalNotifications": {
      "smallIcon": "ic_notification",
      "iconColor": "#FF6600"
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "server": {
    "cleartext": true,
    "androidScheme": "https"
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "buildOptions": {
      "keystorePath": "keys/cimoy-parent.keystore",
      "keystorePassword": "cimoy2024",
      "keystoreAlias": "cimoy",
      "keystoreAliasPassword": "cimoy2024",
      "signingType": "apk"
    }
  }
} 